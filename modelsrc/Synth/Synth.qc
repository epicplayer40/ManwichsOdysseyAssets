$animation walk_NW	"walk45ftlt01" fps 30  LY rotate 3.05 alignto "idle01"
$animation walk_W	"walkright01" fps 30 LY startloop 26 alignto "idle01"
$animation walk_SW	"walkback45lt01" fps 30  LY startloop 19 rotate -7.82 alignto "idle01"


